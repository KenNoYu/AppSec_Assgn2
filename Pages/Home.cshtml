@page
@model WebApplication1.Pages.HomeModel
@{
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h2>User Information</h2>
    <p><strong>First Name:</strong> @Model.FirstName</p>
    <p><strong>Last Name:</strong> @Model.LastName</p>
    <p><strong>Gender:</strong> @Model.Gender</p>
    <p><strong>NRIC:</strong> @Model.NRIC</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Date of Birth:</strong> @Model.DateOfBirth</p>
    <p><strong>Who Am I:</strong> @Model.WhoAmI</p>
    <p><strong>Resume:</strong> <a href="@Model.ResumePath" target="_blank">Download</a></p>

    <button type="button" class="btn btn-primary"><a asp-page="/ChangePassword">Change Password</a></button>
</div>